{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
<style>
    .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="wrapper">
{% if rates|length > 0 %}
    Current exchange rates in database:
    <ul>
    {% for rate in rates %}
        <li>{{ rate.name }} - <code>{{ rate.currencyCode }}</code> - {{ rate.exchangeRate }} PLN</li>
    {% endfor %}
    </ul>
{% else %}
    No exchange rates present in database!<br><br>
    If you're the admin, please run command: <br>
    <code>symfony console app:update-exchange-rates</code>
{% endif %}
</div>
{% endblock %}
